      <%# <script type="text/javascript" src="app/javascript/pie-chart.js"></script> %>
  </head>

  <body>
    <%= render 'layouts/navigation'%> 
    <%= render 'layouts/message'%>
    <div id = 'page-content'>
      <%= yield %>
    </div> 
    <%= render 'layouts/footer'%>  
  </body>
</html>
