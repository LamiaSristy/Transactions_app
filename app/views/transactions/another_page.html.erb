<div class='action d-flex mb-3'>
  <%= link_to 'Add new transaction', new_transaction_path, :class => 'center btn btn-primary btn-lg col-12 col-md-5 font-weight-bold' %> 
</div>

<div class='center'>
  <div class='custom-bg d-flex justify-content-between rounded col-12 col-md-5 center mb-5 shadow-sm bg-white'>
    <p class ="mt-3"><small>External Transactions </small><p>
    <p class ="mt-3"><small>Total Expence:</small> $<%= @t2.sum(:amount) %></p>   
  </div>

  <% @t2.each do |t| %>
    <div class='custom-bg d-flex flex-column col-12 col-md-5 rounded center mb-5 shadow-sm bg-white'>
      <div class = "d-flex justify-content-between">
        <p class ="mt-3"><%= t.name %><p>
        <p class ="mt-3">$<%= t.amount %></p>   
      </div>    
      <div class = "d-flex justify-content-end">
        <p><small class="text-muted"><%=t.created_at.strftime("%b %d, %Y")%></small></p>
      </div>
    </div>
  <%end%>
